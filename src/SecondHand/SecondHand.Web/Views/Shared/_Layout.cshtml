<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/kendo-css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Second hand", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(linkText: "Home", actionName: "Index", controllerName: "Home", routeValues: new { area = "" }, htmlAttributes: null)</li>
                    <li>@Html.ActionLink(linkText: "Advertisements", actionName: "Index", controllerName: "Advertisements", routeValues: new { area = "" }, htmlAttributes: null)</li>
                    <li>
                        <a href=@Url.Action(actionName: "Index", controllerName: "Chats", routeValues: new { area = "Chats" })>
                            Messages
                            <span class="badge" id="notif-badge"></span>
                        </a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-unobtrusive")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/kendo")

    @Html.Kendo().DeferredScripts()    


    @if (User.Identity.IsAuthenticated)
    {
        @Scripts.Render("~/bundles/signalr")
        <script src="~/signalr/hubs"></script>
        @Scripts.Render("~/custom/notificationManagerHome");
    }

    @RenderSection("scripts", required: false)
</body>
</html>
