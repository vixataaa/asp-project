@model SecondHand.Web.Models.Manage.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword", "Manage", null, new { area = "" })
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword", "Manage", null, new { area = "" })
            }
            ]
        </dd>
        <dt>Details:</dt>
        <dd>
            [
                @Html.ActionLink("Change account details", "ChangeDetails", "Manage", null, new { area = "" })
            ]
        </dd>
    </dl>
</div>
